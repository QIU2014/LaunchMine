<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.eric</groupId>
  <artifactId>launchmine</artifactId>
  <version>1.0.1</version>
  <build>
    <finalName>LaunchMine-Universal</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.1</version>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>com.eric.Main</mainClass>
            </transformer>
            <transformer />
          </transformers>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.akathist.maven.plugins.launch4j</groupId>
        <artifactId>launch4j-maven-plugin</artifactId>
        <version>2.6.0</version>
        <executions>
          <execution>
            <id>l4j-clui</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <configuration>
              <headerType>gui</headerType>
              <outfile>target/LaunchMine-Windows-x86_64.exe</outfile>
              <jar>target/${project.build.finalName}.jar</jar>
              <errTitle>LaunchMine</errTitle>
              <classPath>
                <mainClass>com.eric.Main</mainClass>
              </classPath>
              <jre>
                <minVersion>21.0.0</minVersion>
              </jre>
              <versionInfo>
                <fileVersion>${project.version}.0</fileVersion>
                <txtFileVersion>LaunchMine v${project.version}</txtFileVersion>
                <fileDescription>A lightweight Minecraft Launcher</fileDescription>
                <copyright>Copyright Â© 2026 qiuerichanru</copyright>
                <productVersion>${project.version}.0</productVersion>
                <txtProductVersion>LaunchMine v${project.version}</txtProductVersion>
                <productName>LaunchMine</productName>
                <internalName>LM</internalName>
                <originalFilename>LaunchMine-Windows-x86_64.exe</originalFilename>
              </versionInfo>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.skife.maven</groupId>
        <artifactId>really-executable-jar-maven-plugin</artifactId>
        <version>1.5.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>really-executable-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>25</maven.compiler.target>
    <maven.compiler.source>25</maven.compiler.source>
  </properties>
</project>
